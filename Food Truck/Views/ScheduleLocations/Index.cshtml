@model IEnumerable<Food_Truck.Models.ScheduleLocation>

@{
    ViewBag.Title = "Index";
}

<h2>Schedules</h2>
<p>
    @Html.ActionLink("Add Items to Schedule", "Create", "ScheduleLocations")
</p>
<div class="jumbotron-fluid">
    <div class="row">
        <div class="col-sm-offset-1 col-sm-3">
            <h3>Locations</h3>
            <p>
                @Html.ActionLink("Create New", "Create")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Location", new { id = item.ID }, null)
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Location", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-4">
            <h3>Schedule Times</h3>
            <p>
                @Html.ActionLink("Create New", "Create", "Schedule")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedule.StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedule.EndTime)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule.EndTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Schedule", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Schedule", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-3">
            <h3>Trucks</h3>
            <p>
                @Html.ActionLink("Create New", "Create", "Truck")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Truck.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Truck.Menu.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Truck.Name)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.Truck.Menu.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Truck", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Truck", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
