@model IEnumerable<Food_Truck.Models.ScheduleLocation>

@{
    ViewBag.Title = "Index";
}

<h2 margin="20px">Schedules</h2>
<p>
    @Html.ActionLink("Add Items to Schedule", "Create", "ScheduleLocations")
</p>
<div class="container">
    <div class="row">
        <div class="col-sm-4" align="center">
            <h3>Locations</h3>
            <p>
                @Html.ActionLink("View Locations", "Index", "Locations")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Location.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Location.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Locations", new { id = item.ID }, null)
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Locations", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-4" align="center">
            <h3>Schedule Times</h3>
            <p>
                @Html.ActionLink("Create New", "Create", "Schedules")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedule.StartTime)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Schedule.EndTime)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule.StartTime)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Schedule.EndTime)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Schedules", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Schedules", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
        <div class="col-sm-4" align="center">
            <h3>Trucks</h3>
            <p>
                @Html.ActionLink("Create New", "Create", "Trucks")
            </p>
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Truck.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Truck.Menu.Name)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayNameFor(model => model.Truck.Name)
                        </td>
                        <td>
                            @Html.DisplayNameFor(model => model.Truck.Menu.Name)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", "Trucks", new { id = item.ID }, null) |
                            @Html.ActionLink("Details", "Details", new { id = item.ID }) |
                            @Html.ActionLink("Delete", "Delete", "Trucks", new { id = item.ID }, null)
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>
