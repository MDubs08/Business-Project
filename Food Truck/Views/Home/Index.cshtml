                <img src="~/Content/Pictures/FoodTruck0.jpg" id="carouselImage" width="100%" height="840px">
            </div>
        </div>
        <div class="item slides">
            <div class="slide-2"></div>
            <div class="hero">
                <img src="~/Content/Pictures/FoodTruck1.jpg" id="carouselImage" width="100%" height="840px">
            </div>
        </div>
        <div class="item slides">
            <div class="slide-3"></div>
            <div class="hero">
                <img src="~/Content/Pictures/FoodTruck2.jpg" id="carouselImage" width="100%" height="840px">
            </div>
        </div>
    </div>
    </div>
</div>
<div id="welcome" class="background-white">
